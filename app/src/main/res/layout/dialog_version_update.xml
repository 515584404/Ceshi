<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="300dp"
    android:layout_height="wrap_content">

    <TextView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="发现新版"
        android:textSize="18sp"
        android:textColor="@color/new_color"/>
    <View
        android:background="@color/new_color"
        android:layout_width="match_parent"
        android:layout_height="3dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_version_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="30dp"
            android:gravity="center"
            android:layout_weight="2"/>
        <View
            android:layout_width="match_parent"
            android:background="@color/version_update_divider"
            android:layout_height="0.4dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_version_cancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="取消"
                android:background="@color/transparent"
                android:textColor="@color/new_color"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/btn_version_ensure"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="确定"
                android:background="@color/transparent"
                android:textSize="14sp"
                android:textColor="@color/new_color"
                android:layout_height="match_parent" />

        </LinearLayout>
    </LinearLayout>



</LinearLayout>