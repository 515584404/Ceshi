<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/btn_bg"
    android:clickable="true"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <include layout="@layout/main_head_title" />
    </android.support.design.widget.AppBarLayout>

    <ImageView
        android:id="@+id/find_service_phone"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/new_color" />

    <!--官方动态-->
    <LinearLayout
        android:id="@+id/ll_found_gd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/selector_item_bg"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/official_dynamic" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/iv_setting"
            android:layout_weight="1"
            android:text="官方动态"
            android:textColor="@color/gray_light" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/right_arrow" />
    </LinearLayout>


    <!--关于我们-->
    <LinearLayout
        android:layout_marginTop="3dp"
        android:id="@+id/ll_found_women"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
